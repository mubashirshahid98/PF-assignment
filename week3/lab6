public class EvenOddCountLab {
    public static void main(String[] args) {

        int[] nums = {1, 2, 3, 4, 5, 6, 7, 8};
        int even = 0, odd = 0;

        for (int n : nums) {
            if (n % 2 == 0) {
                even++;
            } else {
                odd++;
            }
        }

        System.out.println("Number of even numbers = " + even);
        System.out.println("Number of odd numbers = " + odd);
    }
}
